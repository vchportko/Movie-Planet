<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/selector_row_accent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/noimage"
        android:scaleType="fitXY"
        android:transitionName="moviePhoto"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/textview_date"
        style="@style/TextImageLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/accent_alpha"
        android:layout_alignLeft="@id/imageview_poster"
        android:layout_alignStart="@id/imageview_poster"
        android:layout_alignRight="@id/imageview_poster"
        android:layout_alignEnd="@id/imageview_poster"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>